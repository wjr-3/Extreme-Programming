/* pages/add/add.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 80rpx;
  background-color: #f9f9f9;
  min-height: 100vh;
}

.avatar-wrapper {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 30rpx;
  background-color: #eee;
  border: 2rpx dashed #ccc;
  cursor: pointer;
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 小标题：如“电话号码”、“电子邮箱” */
.form-section-title {
  align-self: flex-start;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin: 40rpx 0 20rpx;
  padding-left: 8rpx;
  border-left: 4rpx solid #06456e;
}

/* 原有表单项（姓名、地址、分组） */
.form-item {
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  font-size: 28rpx;
}

.form-item label {
  width: 80rpx;
  color: #333;
  font-weight: 500;
  padding-right: 20rpx;
}

.form-item input {
  flex: 1;
  height: 60rpx;
  border: 1rpx solid #ddd;
  border-radius: 16rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: white;
}

.form-item picker {
  flex: 1;
  height: 60rpx;
  border: 1rpx solid #ddd;
  border-radius: 16rpx;
  text-align: center;
  background-color: #06456e;
  color: white;
  line-height: 60rpx;
  padding: 0;
}

/* 新增：电话/邮箱条目容器 */
.contact-item {
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: white;
  padding: 10rpx 20rpx;
  border-radius: 16rpx;
  border: 1rpx solid #ddd;
  box-sizing: border-box;
}

.contact-input {
  flex: 1;
  height: 50rpx;
  font-size: 28rpx;
  padding: 0 10rpx;
  background: transparent;
  border: none;
  outline: none;
}

.contact-type-picker {
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #06456e;
  color: white;
  border-radius: 10rpx;
  margin: 0 10rpx;
  font-size: 24rpx;
}

/* 删除按钮 */
.del-btn {
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #ff4d4f;
  background: transparent;
  border: 1rpx solid #ff4d4f;
  border-radius: 10rpx;
  padding: 0;
  margin-left: 10rpx;
}

/* 添加按钮 */
.add-btn {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #06456e;
  background: #e6f4ff;
  border: 1rpx dashed #06456e;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

/* 保存按钮 */
.save-btn {
  width: 100%;
  height: 87rpx;
  background-color: #06456e;
  color: white;
  font-size: 32rpx;
  line-height: 50rpx;
  border-radius: 16rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  border: none;
}